<?xml version="1.0" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
	<system>
		<tab id="nadeem" translate="label" sortOrder="999">
			<label>Nadeem</label>
		</tab>
		<section id="search_related" sortOrder="10" showInWebsite="1" showInStore="1" showInDefault="1" translate="label">
			<label>Search Related</label>
			<tab>nadeem</tab>
			<resource>Nadeem_SearchRelated::config_nadeem_searchrelated</resource>
			<group id="general" sortOrder="10" showInWebsite="1" showInStore="1" showInDefault="1" translate="label">
				<label>General Configuration</label>
				<field id="is_enable" type="select" sortOrder="10" showInWebsite="1" showInStore="1" showInDefault="1" translate="label">
					<label>Enable</label>
					<comment/>
